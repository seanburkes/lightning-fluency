{
	"name": "lightning-fluency-frontend",
	"description": "Lightning Fluency frontend - Language learning through evidence-based educational theories",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^5.0.1",
		"@eslint/js": "^10.0.1",
		"@playwright/test": "^1.58.2",
		"@storybook/addon-a11y": "^10.2.10",
		"@storybook/addon-docs": "^10.2.10",
		"@storybook/addon-svelte-csf": "^5.0.11",
		"@storybook/addon-vitest": "^10.2.10",
		"@storybook/sveltekit": "^10.2.10",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/vite": "^4.2.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.3.1",
		"@testing-library/user-event": "^14.6.1",
		"@vite-pwa/sveltekit": "^1.1.0",
		"@vitest/browser-playwright": "^4.0.18",
		"@vitest/coverage-v8": "^4.0.18",
		"@vitest/ui": "^4.0.18",
		"eslint": "^10.0.0",
		"eslint-plugin-storybook": "^10.2.10",
		"eslint-plugin-svelte": "^3.15.0",
		"globals": "^17.3.0",
		"jest-axe": "^10.0.0",
		"jsdom": "^28.1.0",
		"msw": "^2.12.10",
		"playwright": "^1.58.2",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.5.0",
		"storybook": "^10.2.10",
		"svelte": "^5.49.2",
		"svelte-check": "^4.3.6",
		"tailwindcss": "^4.2.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.56.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"workbox-cacheable-response": "^7.4.0",
		"workbox-expiration": "^7.4.0",
		"workbox-precaching": "^7.4.0",
		"workbox-routing": "^7.4.0",
		"workbox-strategies": "^7.4.0"
	},
	"dependencies": {
		"@skeletonlabs/skeleton": "^4.12.0",
		"@skeletonlabs/skeleton-svelte": "^4.12.0"
	},
	"msw": {
		"workerDirectory": [
			"public"
		]
	}
}
